                  "     pm.expect(data).to.have.property(\"video_url\");\r",
                  "     pm.expect(data).to.have.property(\"questions\");\r",
                  " });\r",
                  "\r",
                  " pm.test(\"Quiz contains 10 questions\", function(){\r",
                  "     const questions = pm.response.json().questions;\r",
                  "     pm.expect(questions).to.be.an(\"array\");\r",
                  "     pm.expect(questions).to.have.length(10);\r",
                  " });\r",
                  "\r",
                  " pm.test(\"Each question contains all required fields\", function(){\r",
                  "    const questions = pm.response.json().questions;\r",
                  "     questions.forEach(function (question) {\r",
                  "         pm.expect(question).to.have.property(\"id\");\r",
                  "         pm.expect(question).to.have.property(\"question_title\");\r",
                  "         pm.expect(question).to.have.property(\"question_options\");\r",
                  "         pm.expect(question).to.have.property(\"answer\");\r",
                  "         pm.expect(question).to.have.property(\"created_at\");\r",
                  "         pm.expect(question).to.have.property(\"updated_at\");  \r",
                  "     });\r",
                  " });\r",
                  "\r",
                  " pm.test(\"Valid answers are (A, B, C, or D)\", function(){\r",
                  "    const questions = pm.response.json().questions;\r",
                  "    const valid = [\"A\", \"B\", \"C\", \"D\"];\r",
                  "    questions.forEach(function(question){\r",
                  "        pm.expect(valid).to.include(question.answer);\r",
                  "    });\r",
